<odoo>
    
    <record id="inherited_ticket_view_tree" model="ir.ui.view">
      <field name="name">inherited.helpdesk.ticket.view.tree</field>
      <field name="model">helpdesk.ticket</field>
      <field name="inherit_id" ref="helpdesk_mgmt.ticket_view_tree"/>
      <field name="arch" type="xml">
          <xpath expr="//field[@name='stage_id']" position="before">
            <field name="category_id" optional="show"/>
          </xpath>

          <xpath expr="//field[@name='create_date']" position="replace">
            <field name="create_date" optional="show"/>
          </xpath>

          <xpath expr="//field[@name='last_stage_update']" position="after">
            <field name="write_uid" optional="show"/>
            <field name="sla_expired" optional="hide"/>
            <field name="hours_since_open" optional="hide"/>
            <field name="hours_in_stage" optional="hide"/>
          </xpath>

      </field>
    </record>

    <record id="inherit_ticket_view_form" model="ir.ui.view">
      <field name="name">inherit.helpdesk.ticket.view.form</field>
      <field name="model">helpdesk.ticket</field>
      <field name="inherit_id" ref="helpdesk_mgmt.ticket_view_form"/>
      <field name="arch" type="xml">

          <xpath expr="//field[@name='partner_name']" position="replace">
          </xpath>

      </field>
    </record>

    <record id="helpdesk_mgmt.helpdesk_ticket_action" model="ir.actions.act_window">
      <field name="context">{'group_by':['stage_id','team_id']}</field>
    </record>

</odoo>